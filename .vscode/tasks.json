{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build banco (gcc)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-std=c11",
                "${workspaceFolder}/Trabalho_final/main.c",
                "${workspaceFolder}/Trabalho_final/administrador.c",
                "${workspaceFolder}/Trabalho_final/cliente.c",
                "${workspaceFolder}/Trabalho_final/unir.c",
                "${workspaceFolder}/Trabalho_final/banco.c",
                "-I",
                "${workspaceFolder}/Trabalho_final",
                "-o",
                "${workspaceFolder}/Trabalho_final/output/banco.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Trabalho_final"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug banco (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Trabalho final/output/banco.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Trabalho final",
            "environment": [],
            "externalConsole": true,
            "preLaunchTask": "Build banco (gcc)",
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
